<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Animate On Scroll</title>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <style>
      body {
        background: rgb(197, 235, 238);
      }
      main {
        display: flex;
        flex-direction: column;
      }
      .container {
        display: flex;
        justify-content: center;
        margin-bottom: 150px;
      }
      .container-items {
        padding: 20px;
        margin: 20px;
        width: 300px;
        height: 260px;
        background-color: rgb(10, 0, 22);
      }
    </style>
  </head>
  <body>
    <main>
      <div class="container">
        <div
          data-aos="fade-up"
          data-aos-delay="1000"
          class="container-items"
        ></div>
        <div class="container-items"></div>
        <div class="container-items"></div>
      </div>
      <div class="container">
        <div data-aos="fade-up-right" class="container-items"></div>
        <div class="container-items"></div>
        <div class="container-items"></div>
      </div>
      <div class="container">
        <div class="container-items"></div>
        <div class="container-items"></div>
        <div class="container-items"></div>
      </div>
      <div class="container">
        <div data-aos="fade-up-right" class="container-items"></div>
        <div class="container-items"></div>
        <div class="container-items"></div>
      </div>
      <div class="container">
        <div class="container-items"></div>
        <div class="container-items"></div>
        <div data-aos="fade-up-right" class="container-items"></div>
      </div>
      <div class="container">
        <div class="container-items"></div>
        <div class="container-items"></div>
        <div class="container-items"></div>
      </div>
    </main>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
